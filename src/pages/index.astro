---
import { ACTION_ERROR_CODES } from 'astro:actions';
import '../styles/global.css';
import Header from '../components/Header.astro';
import Navigation from '../components/Navigation.astro';
import Typography from '../components/Typography.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>CNH Construction</title>
		<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
		<link rel="manifest" href="/favicon/site.webmanifest">
		<link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#5bbad5">
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="theme-color" content="#ffffff">
		<script src="https://kit.fontawesome.com/5cb9dec18e.js" crossorigin="anonymous"></script>
		<Typography />
		<style>
			.image-container {
				background-image: url("/hero.jpg");
				width: 100%;
				height: 25em;
				background-position: bottom;
				background-repeat: no-repeat;
				background-size:cover;
			}
			.brand-intro {
				color: var(--clr-light);
			}
			.brand-img {
				width: 100%;
				height: 20em;
				object-fit: cover;
				margin: 0 auto;
				/* box-shadow: 0px 0px 1px #fff; */
				padding: .3em;
			}
			</style>
	</head>
	<body>
		<header>
			<Header />
		</header>
			<nav class="nav-bar" id="nav-bar">
				<Navigation />
			</nav>
		<main>
			<section class="hero" id="home-hero">
				<div class="image-container">
				</div>
				<h1>Concrete Solutions,<span class="highlight"> Tailored to Your Vision.</span></h1>
				<div>
					<button>
						<h1>
						<i 
							class="fa-solid fa-calendar-days" 
							style="color: var(--clr-light);">
						</i>
						</h1>
						<h1>	
							Schedule a Consultation
						</h1>
					</button>
				</div>
			</section>
			<section class="brand-section">
				<div class="brand-intro">
					<div class="about-us-el">
						<h1>About Us</h1>
						<p>
							CNH Decorative Concrete is a leading provider of decorative concrete solutions in Arlington, TX.
						</p>
						<img
						 src="/arlington-globe-life.jpg" alt="Arlington Texas Rangers Stadium" class="brand-img"
						 >
						 <p>
							With 10+ years of experience and a commitment to quality, we've earned a reputation for excellence in the DFW and surrounding areas.
						 </p>
					</div>
					<div class="specialization-el">
						<h1>Transform Surfaces</h1>
						<img src="/epoxy-floor.jpg" alt="Men polishing floor" class="brand-img">
						<p>
							We specialize in transforming concrete surfaces with a range of innovative treatments. Our services include epoxy flooring installation, floor coating removal, sealed concrete, polyurea joint filler, concrete staining, and concrete polishing.
						</p>
					</div>
					<h1>Our Mission</h1>
					<p>
						At CNH, we're committed to delivering top-quality decorative concrete solutions at competitive prices. 
					</p>
					<img src="sanding-epoxy.jpg" alt="Young man sanding epoxy" class="brand-img">
					<p>
						Our dedication to customer satisfaction has been the cornerstone of our success. Contact us today to learn more about our stained and polished concrete options, as well as our other comprehensive services.
					</p>
				</div>
			</section>
		</main>
		<footer>
			<Footer />
		</footer>
		<script>
			import "../scripts/menu.js";
		</script>
	</body>
</html>
