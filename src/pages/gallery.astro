---
import Header from '../components/Header.astro';
import Navigation from '../components/Navigation.astro';
import Typography from '../components/Typography.astro';
import Footer from '../components/Footer.astro';
import Icons from '../components/Icons.astro';
import '../styles/global.css';
const caseStudies = ["New Bar Top","New Concrete Floor"]
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <Typography />
    <Icons />
    <title>Gallery</title>
    <style>
        img {
            box-shadow: 0px 0px 1px #fff;
            flex-basis: 49%;
            flex-shrink: 1;
            flex-grow: 0;
            height: 8em;
            margin: 0 auto .2em;
            border-radius: .3em;
            object-fit: fill;
        }
        .showcase-section {
            padding: .5em;
            display: flex;
            flex-direction: column;
            justify-content: space-around;

        }
        .showcase-heading {
            font-family: var(--ff-secondary);
            text-transform: capitalize;
        }
        .showcase__bar-top, .showcase__scraped-floor, .showcase__extra {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            align-items: end;
            max-width: 100%;
        }
        .bottom-image {
            flex-basis: 100%;
            flex-grow: 1;
            height: 12em;
            max-width: 100%;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <header>
        <Header />
    </header>
    <nav class="nav-bar" id="nav-bar">
        <Navigation />
    </nav>
    <h1>Surfaces we've revitalized</h1>

    <section class="showcase-section">
        <div class="showcase">
            <h2 class="showcase-heading">
                    {caseStudies[0]}
            </h2>
            <div class="showcase__bar-top">
                <img src="/barcounter-before.png" alt="" class="before-image">
                <img src="/barcounter-before2.png" alt="" class="before-image">
                <img src="/barcounter-after3.png" alt="" class="bottom-image">
            </div>
            <h2 class="showcase-heading">
                    {caseStudies[1]}
            </h2>
            <div class="showcase__scraped-floor">
                <img src="/scraped-floor.png" alt="" class="before-image">
                <img src="/scraped-floor2.png" alt="" class="before-image">
                <img src="/scraped-floor-after4.png" alt="">
                <img src="/scraped-floor-after.png" alt="">
            </div>
            <h2 class="showcase-heading">
                More Shiny Surfaces
            </h2>
            <div class="showcase__extra">
                <img src="/corner-room-concrete.png" alt="" class="extra-image">
                <img src="/black-granite-gray.png" alt="" class="extra-image">
                <img src="/dhc-job.png" alt="" class="extra-image">
                <img src="/gray-concrete.png" alt="" class="extra-image">
            </div>
        </div>
    </section>
    <footer>
        <Footer />
    </footer>
    <script>
        import "../scripts/menu.js"
        import "../scripts/gallery.js"
    </script>
</body>
</html>